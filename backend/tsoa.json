{
    "entryFile": "src/index.ts",
    "controllerPathGlobs": [
        "src/**/*.controller.ts"
    ],
    "spec": {
        "specVersion": 3,
        "outputDirectory": "build",
        "specFileBaseName": "openapi",
        "securityDefinitions": {
            "jwt": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            },
            "jwt-optional": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    },
    "routes": {
        "autoAlias": true,
        "routesDir": "build",
        "iocModule": "src/ioc.ts",
        "middleware": "express",
        "authenticationModule": "src/modules/auth/authentication.ts"
    },
    "noImplicitAdditionalProperties": "throw-on-extras"
}