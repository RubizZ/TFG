{
    "entryFile": "src/index.ts",
    "controllerPathGlobs": [
        "src/**/*.controller.ts"
    ],
    "spec": {
        "specVersion": 3,
        "outputDirectory": "build",
        "specFileBaseName": "swagger.json",
        "securityDefinitions": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            },
            "bypass": {
                "type": "apiKey",
                "name": "none",
                "in": "header"
            }
        }
    },
    "routes": {
        "autoAlias": true,
        "routesDir": "build",
        "iocModule": "src/ioc.ts",
        "middleware": "express",
        "authenticationModule": "src/modules/auth/authentication.ts"
    }
}